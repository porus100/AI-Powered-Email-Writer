{
  "name": "Email Writer Assistant",
  "description": "AI Powered Email Reply Generator",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["active tab", "storage"],
  "host_permission": ["http://localhost:8080/*", "*://mail.google.com"],
  "action": {
    "default_title": "Email Writer Assistant"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://mail.google.com/*"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["emailWriterIcon.png"],
      "matches": ["*://mail.google.com/*"]
    }
  ]
}
